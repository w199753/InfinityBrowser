<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <IntermediateOutputPath>../../../Intermediate/Game/Android/</IntermediateOutputPath>
    <Platforms>ARM64</Platforms>
  </PropertyGroup>
  <PropertyGroup>
    <TargetFramework>net6.0-android</TargetFramework>
    <SupportedOSPlatformVersion>21</SupportedOSPlatformVersion>
    <OutputType>Exe</OutputType>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationId>com.infinity.AndroidApp</ApplicationId>
    <ApplicationVersion>1</ApplicationVersion>
    <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <RootNamespace>InfinityEngine.Game</RootNamespace>
    <BaseOutputPath>$(ProjectDir)../../../Binaries/Game/Android/</BaseOutputPath>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Silk.NET.OpenGL" Version="2.15.0" />
    <PackageReference Include="Silk.NET.OpenGLES" Version="2.15.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Core\Infinity.Core.csproj" />
    <ProjectReference Include="..\..\Engine\Infinity.Engine.csproj" />
    <ProjectReference Include="..\..\Graphics\Infinity.Graphics.csproj" />
    <ProjectReference Include="..\..\Rendering\Infinity.Rendering.csproj" />
    <ProjectReference Include="..\..\Window\Infinity.Windowing.csproj" />
  </ItemGroup>
</Project>